<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="-1" android:layout_height="-1">
    <Button android:id="@id/button_play" android:layout_width="-2" android:layout_height="-2" android:text="play" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:onClick="playMusic" />
    <Button android:id="@id/button_pause" android:layout_width="-2" android:layout_height="-2" android:text="pause" android:layout_below="@id/button_play" android:layout_centerHorizontal="true" android:onClick="pauseMusic" />
    <Switch android:id="@id/switch_looping" android:layout_width="-2" android:layout_height="-2" android:checked="false" android:text="looping" android:layout_centerHorizontal="true" android:layout_centerVertical="true" />
</RelativeLayout>
